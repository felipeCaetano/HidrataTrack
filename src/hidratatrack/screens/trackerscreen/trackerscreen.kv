<TrackerScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "8dp"

        MDTopAppBar:
            type: "small"
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
            MDTopAppBarTitle:
                text: "Controle Diário"
                pos_hint: {"center_x": .5}
# 
        MDBoxLayout:
            orientation: "vertical"
            padding: "16dp"
            size_hint_y: None
            height: self.minimum_height

            MDCard:
                orientation: "vertical"
                padding: "16dp"
                size_hint: None, None
                # size: "320dp", "500dp"
                size: "280dp","500dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                elevation: 2
                shadow_radius: 6
                shadow_offset: (0, 2)

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "24dp"
                    adaptive_height: True
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "8dp"

                    MDLabel:
                        id: daily_goal_label
                        text: "Meta Diária: 0 mL"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_style: "Title"
                        role: "large"
# 
                    MDLabel:
                        id: progress_label
                        text: "Progresso: 0 mL"
                        halign: "center"
                        theme_text_color: "Secondary"

                    MDLinearProgressIndicator:
                        id: progress_bar
                        value: 0
                        color: get_color_from_hex("#2169F3")
                        size_hint_x: .9
                        pos_hint: {"center_x": .5}
# 
                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        pos_hint: {"center_x": .5}

                        MDBoxLayout:
                            orientation: "horizontal"
                            adaptive_size: True
                            spacing: "10dp"

                            MDTextField:
                                id: water_add
                                mode: "outlined"
                                size_hint_x: None
                                width: "120dp"
                                pos_hint: {"center_x": .5}
                                input_filter: "float"
                                write_tab: False
# 
                                MDTextFieldHintText:
                                    text: "Volume"
                                MDTextFieldHelperText:
                                    text: "Digite o volume em mL"
# 
                            MDIconButton:
                                style: "standard"
                                icon: "water-plus"
                                on_release: app.add_water(water_add.text)
                                md_bg_color: get_color_from_hex("#2196F3")
# 
                        MDGridLayout:
                            adaptive_height: True
                            spacing: "10dp"
                            rows: 2

                            MDButton:
                                style: "filled"
                                on_release: app.add_water(100)
                                md_bg_color: get_color_from_hex("#2196F3")

                                MDButtonIcon:
                                    icon: "cup-water"
                                MDButtonText:
                                    text: "100mL"

                            MDButton:
                                style: "filled"
                                on_release: app.add_water(200)
                                md_bg_color: get_color_from_hex("#2196F3")

                                MDButtonIcon:
                                    icon: "cup-water"
                                MDButtonText:
                                    text: "200mL"
# 
                            MDButton:
                                style: "filled"
                                on_release: app.add_water(300)
                                md_bg_color: get_color_from_hex("#2196F3")

                                MDButtonIcon:
                                    icon: "cup-water"
                                MDButtonText:
                                    text: "300mL"

                            MDButton:
                                style: "filled"
                                on_release: app.add_water(500)
                                md_bg_color: get_color_from_hex("#4CAF50")

                                MDButtonIcon:
                                    icon: "cup-water"
                                MDButtonText:
                                    text: "500mL"
                        MDWidget:

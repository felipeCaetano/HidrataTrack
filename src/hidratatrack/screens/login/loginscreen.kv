<LoginScreen>
    MDRelativeLayout:
        md_bg_color: self.theme_cls.backgroundColor
        
        # Container principal que se adapta ao tamanho da tela
        MDBoxLayout:
            orientation: "vertical"
            spacing: "16dp"
            padding: ["16dp", "32dp", "16dp", "16dp"]
            adaptive_height: True
            pos_hint: {"center_x": .5, "center_y": .5}
            
            # Logo com tamanho adaptativo
            FitImage:
                source: 'assets/hidratatrack.png'
                size_hint: (None, None)
                size:
                    min(root.width * 0.4, dp(150)), min(root.width * 0.4, dp(150))
                pos_hint: {"center_x": .5}
                
            # Card de login com largura responsiva
            MDCard:
                orientation: 'vertical'
                size_hint: (None, None)
                size: min(root.width - dp(32), dp(400)), self.minimum_height
                pos_hint: {"center_x": .5}
                padding: "24dp"
                spacing: "20dp"
                elevation: 3
                radius: "16dp"

                MDLabel:
                    text: "Bem-vindo"
                    halign: "center"
                    adaptive_height: True
                    padding_y: "12dp"

                MDTextField:
                    id: login
                    mode: "outlined"
                    size_hint_x: 1
                    write_tab: False
                    radius: [8, 8, 8, 8]
                    
                    MDTextFieldLeadingIcon:
                        icon: "account"
                    
                    MDTextFieldHintText:
                        text: "Login"
                    
                    MDTextFieldHelperText:
                        text: "Digite seu nome de usu√°rio"

                MDTextField:
                    id: password
                    mode: "outlined"
                    size_hint_x: 1
                    write_tab: False
                    password: True
                    radius: [8, 8, 8, 8]
                    
                    MDTextFieldLeadingIcon:
                        icon: "key-variant"
                    
                    MDTextFieldHintText:
                        text: "Senha"
                    
                    MDTextFieldHelperText:
                        text: "Digite sua senha"

                MDButton:
                    style: "text"
                    pos_hint: {"center_x": .5}
                    padding: ["8dp", "8dp"]
                    on_release: root.handle_forgot_password()
                    
                    MDButtonText:
                        text: "Esqueci minha senha"
                        theme_text_color: "Primary"

                MDButton:
                    style: "filled"
                    size_hint_x: 1
                    pos_hint: {"center_x": .5}
                    padding: ["16dp", "16dp"]
                    on_release: root.handle_auth()
                    md_bg_color: get_color_from_hex("#2196F3")
                    radius: "8dp"
                    
                    MDButtonText:
                        text: "Entrar"

                MDButton:
                    style: "filled"
                    size_hint_x: 1
                    pos_hint: {"center_x": .5}
                    padding: ["16dp", "16dp"]
                    on_release: app.switch_to_create_account()
                    md_bg_color: get_color_from_hex("#4CAF50")
                    radius: "8dp"
                    
                    MDButtonText:
                        text: "Criar Conta"